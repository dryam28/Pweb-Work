<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="../../css/bootstrap.min.css" />
    <link rel="stylesheet" href="../../css/global.css" />
    <style>
      /* .table {
        overflow-x: auto;
        max-width: 400px;
      } */
    </style>
  </head>
  <body>
    <form action="/add" method="post" class="d-flex flex-column align-items-center">
      Añadir trabajador
      <input type="text" placeholder="Nombre" name="name">
      <input type="text" placeholder="Apellidos" name="lastName">
      <input type="text" placeholder="Correo" name="email">
      <input type="number" placeholder="Edad" name="age">
      <input type="text" placeholder="Carne de identidad" name="ci">
      <input type="text" placeholder="Categoría docente" name="teachingCategory">
      <input type="text" placeholder="Grado científico" name="scientificDegree">
      <input type="text" placeholder="Especialidad" name="speciality">
      <input type="text" placeholder="Cargo" name="charge">
      <div>
        <div>Disponible</div>
        <input type="radio" value="1" name="availability">
        <label>Si</label>
        <input class="ms-3" type="radio" value="0" name="availability">
        <label>No</label>
      </div>
      <button type="submit">Submit</button>
    </form>
    <% if (workers) { %>

    <table class="table table-striped">
      <thead class="">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nombre</th>
          <th scope="col">Apellidos</th>
          <th scope="col">Edad</th>
          <th scope="col">Correo</th>
          <th scope="col">CI</th>
          <th scope="col">Categoría Docente</th>
          <th scope="col">Grado Científico</th>
          <th scope="col">Especialidad</th>
          <th scope="col">Cargo</th>
          <th scope="col">Disponibilidad</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < workers.length; i++) { %>
        <tr>
          <th scope="row"><%= i+1 %></th>
          <td><%= workers[i].name %></td>
          <td><%= workers[i].lastName %></td>
          <td><%= workers[i].age %></td>
          <td><%= workers[i].email %></td>
          <td><%= workers[i].ci %></td>
          <td><%= workers[i].teachingCategory %></td>
          <td><%= workers[i].scientificDegree %></td>
          <td><%= workers[i].speciality %></td>
          <td><%= workers[i].charge %></td>
          <td><%= workers[i].availability === 1? 'Si' : 'No' %></td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <% } %>
    
  </body>
</html>
