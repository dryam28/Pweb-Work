<div class="modal fade" id="{{idModal}}" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <button type="button" class="btn-close position-absolute" style="right: 10; top: 10;"
                data-bs-dismiss="modal" aria-label="Close"></button>
            <div class="modal-header mt-3">
                <h1 class="modal-title fs-5" id="exampleModalLabel">{{title}}</h1>
            </div>
            <form action="/users/register" method="post" class="d-flex flex-column align-items-center py-4">
                <div class="d-flex flex-column">
                    <div class="form-group">
                        <label for="name" class="form-label">Nombre:</label>
                        <input type="text" class="form-control" id="name" placeholder="Nombre" name="name">
                    </div>
                    <div class="form-group">
                        <label for="department" class="form-label">Departamento:</label>
                        <select name="department" class="form-control">
                            <option value="Humanidades">Humanidades</option>
                            <option value="Infomática">Infomática</option>
                            <option value="Matemática">Matemática</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="email" class="form-label">Correo:</label>
                        <input type="email" class="form-control" id="email" placeholder="Correo" name="email">
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label">Contraseña:</label>
                        <input type="password" class="form-control" id="password" placeholder="Contraseña"
                            name="password">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Añadir</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .form-group {
        margin-bottom: 1rem;
    }

    .form-label {
        font-weight: bold;
        margin-bottom: 0.25rem;
    }

    .form-control {
        width: 100%;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>