<div class="modal fade" id={{idModal}} aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <button type="button" class="btn-close position-absolute" style="right: 10; top: 10;"
                data-bs-dismiss="modal" aria-label="Close"></button>
            <div class="modal-header mt-3">
                <h1 class="modal-title fs-5" id="exampleModalLabel">{{title}}</h1>
            </div>
            <form action="/requests/register" method="post" class="d-flex flex-column align-items-center py-4">
                <div class="d-flex w-75 flex-column">
                    <div class="form-group">
                        <label for="">Trabajador: </label>
                        <select name="worker" class="form-control">
                            {{#each workersEmail}}
                            <option value="{{id}}">{{email}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group mt-3">
                        <label for="">Tipo de permiso: </label>
                        <select name="type" class="form-control">
                            <option value="Licencia">Licencia</option>
                            <option value="Vacaciones">Vacaciones</option>
                            <option value="Días de asuntos propios">Días de asuntos propios</option>
                            <option value="Baja médica">Baja médica</option>
                            <option value="Excedencias">Excedencias</option>
                        </select>
                    </div>
                    <div class="form-group mt-3">
                        <label for="">Descripción: </label>
                        <textarea name="description" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Añadir</button>
                </div>
            </form>
        </div>
    </div>
</div>