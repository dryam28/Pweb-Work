<h2 class="mt-4">Trabajadores por Departamento</h2>
<div class="table-responsive small">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Departamento</th>
                <th scope="col">Total</th>
            </tr>
        </thead>
        <tbody>
            {{#each dashboardStats.workersByDepartment}}
            <tr>
                <td>{{department}}</td>
                <td>{{count}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>